<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.business.BusinessItem">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tvBestelnr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bestelnummer"
        app:layout_constraintEnd_toStartOf="@+id/tvDlPakbon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNaam"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Naam"
        app:layout_constraintEnd_toStartOf="@+id/tvDlFactuur"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBestelnr" />

    <TextView
        android:id="@+id/tvAdres"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Adres"
        app:layout_constraintEnd_toStartOf="@+id/tvDlFactuur3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNaam" />

    <TextView
        android:id="@+id/tvDlFactuur"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:text="@string/factuurDl_txt"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDlPakbon" />

    <TextView
        android:id="@+id/tvDlFactuur3"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:text="@string/Retour_txt"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDlFactuur" />

    <TextView
        android:id="@+id/tvDlPakbon"
        android:layout_width="206dp"
        android:layout_height="0dp"
        android:text="@string/pakbonDl_txt"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>