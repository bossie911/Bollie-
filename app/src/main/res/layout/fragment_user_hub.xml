<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2BDDC6">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/roundedwidget" />


    <TextView
        android:id="@+id/Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/userName"
        android:textColor="#1F0C7A"
        android:textColorHighlight="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.418"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Fuction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/function"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Profile" />

    <LinearLayout
        android:id="@+id/linearLayoutProfiel"
        android:layout_width="411dp"
        android:layout_height="67dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <Button
            android:id="@+id/buttonProfiel"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/profile"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#1F0C7A" />

        <Button
            android:id="@+id/buttonProfiel2"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/knop" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutSettings"
        android:layout_width="411dp"
        android:layout_height="67dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutProfiel">

        <Button
            android:id="@+id/buttonSettings"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/setings"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#1F0C7A" />

        <Button
            android:id="@+id/buttonSettings2"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/knop" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutCursussen"
        android:layout_width="411dp"
        android:layout_height="67dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutSettings">

        <Button
            android:id="@+id/buttonCursussen"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cursussen"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#1F0C7A" />

        <Button
            android:id="@+id/buttonCursussen2"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/knop" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutBusiness"
        android:layout_width="411dp"
        android:layout_height="67dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCursussen">

        <Button
            android:id="@+id/buttonBusiness"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/business"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#1F0C7A" />

        <Button
            android:id="@+id/buttonBusiness2"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/knop" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutComunity"
        android:layout_width="411dp"
        android:layout_height="67dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="76dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutBusiness">

        <Button
            android:id="@+id/buttonComunity"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/comunity"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#1F0C7A" />

        <Button
            android:id="@+id/buttonComunity2"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/knop" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutSupport"
        android:layout_width="411dp"
        android:layout_height="67dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutComunity">

        <Button
            android:id="@+id/buttonSupport"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/support"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#1F0C7A" />

        <Button
            android:id="@+id/buttonSupport2"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/knop" />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_btn_bg"
        android:text="@string/btn_logout"
        app:backgroundTint="@color/Red"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutComunity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutBusiness" />

</androidx.constraintlayout.widget.ConstraintLayout>